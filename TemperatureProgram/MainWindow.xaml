<Window x:Class="TemperatureProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TemperatureProgram"
        mc:Ignorable="d"
        Title="TemperatureProgram" Height="322" Width="552">
    <Grid>
        
        <GroupBox Background="#18000000" VerticalAlignment="Top" Height="33">
            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <Button x:Name="PreviousWeekBttn" Content="&lt;" Margin="0,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Click="PreviousWeekBttn_Click"/>
                <Button x:Name="NextWeekBttn" Content="&gt;" Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="NextWeekBttn_Click"/>
                <Label x:Name="CurrentDateLabel" Content="2022.04.08" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontFamily="Segoe UI" Margin="0,0,0,0"/>
            </Grid>
        </GroupBox>
        <GroupBox Margin="0,25,0,0" Background="#FFE3FFFC"/>

    </Grid>
</Window>
